<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="image"
            type="com.danteyu.studio.weatherforecast.data.WeatherImage" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_home_height">

        <ImageView
            android:id="@+id/image_home"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@{image.weatherImage}"
            android:contentDescription="@string/image_between_data"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_cwb"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>