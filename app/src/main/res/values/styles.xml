<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="textAppearanceBody2">@style/CustomTextBodyHome</item>
    </style>

    <style name="CustomTextBodyHome" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/gray_646464</item>
    </style>

    <style name="CustomTextBodyDetail" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
